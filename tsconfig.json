{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "experimentalDecorators": false,
    "lib": ["dom", "es2020"],
    "outDir": "./build",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "exclude": ["build"]
}
